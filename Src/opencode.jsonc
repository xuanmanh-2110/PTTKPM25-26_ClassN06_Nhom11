{
    "$schema": "https://opencode.ai/config.json",
    "permission": {
        "edit": "allow",
        "webfetch": "deny",
        "bash": {
            "*": "ask"
        },
    },
    "mcp": {
        "ddg-search": {
            "type": "local",
            "command": [
                "uvx",
                "duckduckgo-mcp-server",
            ],
        },
        "memory": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@modelcontextprotocol/server-memory"
            ],
            "environment": {
                "MEMORY_FILE_PATH": "E:\\flower\\tmp\\memory.json"
            }
        },
        "sequential-thinking": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ]
        }
    }
}